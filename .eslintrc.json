{
  "extends": [
    "next/core-web-vitals",
    "next",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js"
      ],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "settings": {
    "tailwindcss": {
      "whitelist": [
        "destructive"
      ]
    }
  }
}